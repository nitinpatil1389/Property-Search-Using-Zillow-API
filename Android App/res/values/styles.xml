<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="headerText" parent="@android:style/TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="labelText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>
    
    <style name="inputTextBox" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>
    
    <style name="spinner" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="reqFieldErrMsg" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#FF0000</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    
    <style name="zillowErrorText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
    </style>
    
    <style name="resultsTableRow">
         <item name="android:paddingLeft">5dp</item>
         <item name="android:paddingTop">10dp</item>
         <item name="android:paddingBottom">10dp</item>
    </style>
</resources>
